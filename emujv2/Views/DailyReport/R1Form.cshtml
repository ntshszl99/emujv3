                isValid = false;
                $('#gang').addClass('is-invalid');
            } else {
                $('#gang').removeClass('is-invalid');
            }

            // Alert if invalid fields exist
            if (!isValid) {
                alert('Please fill all required fields.');
            }

            return isValid;
        }
