@{
    ViewBag.Title = "Daily Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-content main-content">
    <div class="side-app">
        <div class="container-fluid main-container">

            <!--Page header-->
            <div class="page-header">
                <div class="page-leftheader">
                    <h4 class="page-title">Daily Form</h4>
                </div>           
                <div class="page-rightheader ms-auto d-lg-flex d-none">
                    <ol class="breadcrumb">
                        <li></li>
                        <li class="breadcrumb-item active font-weight-bold" aria-current="page">Form</li>
                        <li class="breadcrumb-item"><a href="/Home/Report"><span class="breadcrumb-icon">Report</span></a></li>
                        <li class="breadcrumb-item"><a href="/Home/Checklist"><span class="breadcrumb-icon">Checklist</span></a></li>   
                    </ol>
                </div>
            </div>
            <!--End Page header-->

            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Daily Form</h3>
                        </div>
                        <div class="card-body">
                            <div class="mb-3 m-0">
                                <div class="row">
                                    <div class="col-6">
                                        <label class="mt-3 form-label">Region</label>
                                        <select class="form-control form-select select2">
                                            <option value="">Select Region</option>
                                            <option value="1">January</option>
                                        </select>
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-3 form-label">KMUJ</label>
                                        <select class="form-control form-select select2">
                                            <option value="">Select Option</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                        </select>
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">Section</label>
                                        <select class="form-control form-select select2">
                                            <option value="">Select Section</option>
                                            <option value="2014">2014</option>
                                            <option value="2013">2013</option>
                                        </select>
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">Gang</label>
                                        <input type="text" class="form-control">
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">No. of Staff</label>
                                        <input type="text" class="form-control">
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">Work Date</label>
                                        <input type="text" class="form-control">
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">Line</label>
                                        <select class="form-control form-select select2">
                                            <option value="">Select Line</option>
                                            <option value="2014">2014</option>
                                            <option value="2013">2013</option>
                                        </select>
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">Category</label>
                                        <select class="form-control form-select select2">
                                            <option value="">Select Category</option>
                                            <option value="2014">2014</option>
                                            <option value="2013">2013</option>
                                        </select>
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">Work</label>
                                        <select class="form-control form-select select2">
                                            <option value="">Select Work Type</option>
                                            <option value="2014">2014</option>
                                            <option value="2013">2013</option>
                                        </select>
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">Total</label>
                                        <input type="text" class="form-control" placeholder="Total">
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">Unit</label>
                                        <input type="text" class="form-control" placeholder="Unit">
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">Boundaries</label>
                                        <select class="form-control form-select select2">
                                            <option value="">Select Boundaries</option>
                                            <option value="2014">2014</option>
                                            <option value="2013">2013</option>
                                        </select>
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">Location</label>
                                        <select class="form-control form-select select2">
                                            <option value="">Select Location</option>
                                            <option value="2014">2014</option>
                                            <option value="2013">2013</option>
                                        </select>
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">KM</label>
                                        <input type="text" class="form-control" placeholder="KM">
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">Effected KM (Start)</label>
                                        <input type="text" class="form-control" placeholder="Start KM">
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">Effected KM (End)</label>
                                        <input type="text" class="form-control" placeholder="End KM">
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">Effected KM</label>
                                        <input type="text" class="form-control" placeholder="Total KM">
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">Time Start </label>
                                        <input type="text" class="form-control" placeholder="Start Time">
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">Time End</label>
                                        <input type="text" class="form-control" placeholder="End Time">
                                    </div>
                                    <div class="col-6">
                                        <label class="mt-5 form-label">Time Taken KM</label>
                                        <input type="text" class="form-control" placeholder="Total KM">
                                    </div>
                                    <div class="col-xl-6">
                                        <div class="mb-3 mt-5">
                                            <div class="form-label">Work at Station?</div>
                                            <div class="custom-controls-stacked">
                                                <label class="custom-control custom-radio">
                                                    <input type="radio" class="custom-control-input" name="example-radios" value="option1" checked="">
                                                    <span class="custom-control-label">Yes</span>
                                                </label>
                                                <label class="custom-control custom-radio">
                                                    <input type="radio" class="custom-control-input" name="example-radios" value="option2">
                                                    <span class="custom-control-label">No</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-8">
                                        <label class="mt-5 form-label">Additional Information</label>
                                        <textarea class="mb-5 form-control" placeholder="Textarea" rows="3"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- end app-content-->



